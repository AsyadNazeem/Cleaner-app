<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".House_details_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tu_tu_qzgqo3nvslo_unsplash"
        android:backgroundTint="#80000000"
        android:backgroundTintMode="src_over">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/sharedscreenshot1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="Customer Name"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtCName"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Enter Customer Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"

                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Email"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtCEmail"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Enter Email Address"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Phone No"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtCPhoneNo"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Enter Phone No"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="House Address"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Total Square Feet"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtSquareFeet"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Square Feet"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Amount of Rooms"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtAmountOfRooms"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Amount of Rooms"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Amount of bathrooms"
                android:textSize="20dp"
                style="@style/text"/>

            <EditText
                android:id="@+id/txtAmountOfBathrooms"
                android:layout_width="match_parent"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Amount of Bathrooms"
                android:inputType="textPersonName"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Flooring Type"
                android:textSize="20dp"
                style="@style/text"/>

            <Spinner
                android:id="@+id/spFlooringType"
                android:layout_width="160dp"
                android:paddingLeft="26dp"
                android:layout_height="52dp"
                android:background="@drawable/style_text"
                android:layout_marginLeft="20dp"
                tools:ignore="SpeakableTextPresentCheck"
              />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:paddingLeft="26dp"

                    android:background="@drawable/style_text"
                    app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />


            </LinearLayout>


            <Button
                android:id="@+id/btnCalculateAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Calculate Amount"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/btnHouseDetailsSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Submit"
                android:background="@drawable/button_selector"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>